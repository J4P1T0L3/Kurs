<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/blue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/niebieski"
        android:gravity="center"
        android:text="@string/niebieski" />

    <TextView
        android:id="@+id/red"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/czerwony"
        android:gravity="center"
        android:text="@string/czerwony" />

    <TextView
        android:id="@+id/yellow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/zolty"
        android:gravity="center"
        android:text="@string/zolty" />

    <TextView
        android:id="@+id/grey"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/szary"
        android:gravity="center"
        android:text="@string/szary" />

    <TextView
        android:id="@+id/green"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/zielony"
        android:gravity="center"
        android:text="@string/zielony" />

</LinearLayout>
