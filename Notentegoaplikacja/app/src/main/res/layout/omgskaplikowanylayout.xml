<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/czarny">

    <TextView
        android:id="@+id/blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/niebieski"
        android:gravity="center"
        android:text="@string/niebieski" />

    <TextView
        android:id="@+id/red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/czerwony"
        android:gravity="center"
        android:text="@string/czerwony"
        android:layout_below="@id/blue"
        android:layout_toRightOf="@id/blue"/>

    <TextView
        android:id="@+id/yellow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/zolty"
        android:gravity="center"
        android:text="@string/zolty"
        android:layout_below="@id/red"
        android:layout_toRightOf="@id/red"/>

    <TextView
        android:id="@+id/grey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/szary"
        android:gravity="center"
        android:text="@string/szary"
        android:layout_below="@id/yellow"
        android:layout_toRightOf="@id/yellow"/>

    <TextView
        android:id="@+id/green"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/zielony"
        android:background="@color/zielony"
        android:gravity="center"
        android:layout_below="@id/grey"
        android:layout_toRightOf="@id/grey"/>

    <TextView
        android:id="@+id/grey0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/szary"
        android:gravity="center"
        android:text="@string/szary"
        android:layout_below="@id/green"
        android:layout_toLeftOf="@id/green"/>

    <TextView
        android:id="@+id/yellow0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/zolty"
        android:gravity="center"
        android:text="@string/zolty"
        android:layout_below="@id/grey0"
        android:layout_toLeftOf="@id/grey0"/>

    <TextView
        android:id="@+id/red0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/czerwony"
        android:gravity="center"
        android:text="@string/czerwony"
        android:layout_below="@id/yellow0"
        android:layout_toLeftOf="@id/yellow0"/>
    <TextView
        android:id="@+id/blue0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/niebieski"
        android:gravity="center"
        android:text="@string/niebieski"
        android:layout_below="@id/red0"
        android:layout_toLeftOf="@id/blue0"/>


</RelativeLayout>
