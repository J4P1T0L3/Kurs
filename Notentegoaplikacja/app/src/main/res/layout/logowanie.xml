<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lol">

    <ImageView
        android:layout_marginTop="64dp"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logo" />

    <EditText
        android:id="@+id/logowanie"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:maxLines="1"
        android:inputType="text"/>

    <EditText
        android:id="@+id/haslo"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/logowanie"
        android:layout_centerHorizontal="true"
        android:inputType="numberPassword"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/logowanie"
        android:layout_alignBaseline="@+id/logowanie"
        android:text="Login" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/haslo"
        android:layout_alignBaseline="@+id/haslo"
        android:text="HasÅ‚o"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Zaloguj"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/haslo"
        android:background="@color/przycisk"/>


</RelativeLayout>