<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/blue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/niebieski"
        android:gravity="center"
        android:layout_weight="1"
        android:text="@string/niebieski"
        android:layout_margin="10dp"/>

    <TextView
        android:id="@+id/red"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/czerwony"
        android:gravity="center"
        android:text="@string/czerwony"
        android:layout_weight="1"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/yellow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/zolty"
        android:gravity="center"
        android:text="@string/zolty"
        android:layout_weight="1"
        android:layout_margin="10dp"/>

    <TextView
        android:id="@+id/grey"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/szary"
        android:gravity="center"
        android:text="@string/szary"
        android:layout_weight="1"
        android:layout_marginLeft="64dp"
        android:layout_marginRight="64dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/green"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/zielony"
        android:gravity="center"
        android:text="@string/zielony"
        android:layout_weight="1"
        android:layout_margin="10dp"/>
</LinearLayout>
