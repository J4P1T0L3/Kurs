<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lol">
    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/nick"
        android:layout_below="@+id/imageView"
        android:layout_alignStart="@+id/email"
        android:layout_marginTop="38dp"
        android:inputType="text"
        android:maxLines="1"/>
    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/email"
        android:layout_below="@id/nick"
        android:layout_centerHorizontal="true"
        android:inputType="textEmailAddress"/>
    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/haslo0"
        android:layout_below="@id/email"
        android:layout_centerHorizontal="true"
        android:inputType="textPassword"/>
    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/phaslo0"
        android:layout_below="@id/haslo0"
        android:layout_centerHorizontal="true"
        android:inputType="textPassword"/>
    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/ntel"
        android:layout_below="@id/phaslo0"
        android:layout_centerHorizontal="true"
        android:inputType="phone"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:layout_toLeftOf="@id/nick"
        android:layout_alignBaseline="@id/nick"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hasło"
        android:layout_toLeftOf="@id/haslo0"
        android:layout_alignBaseline="@id/haslo0"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="P. Hasło"
        android:layout_toLeftOf="@id/phaslo0"
        android:layout_alignBaseline="@id/phaslo0"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:layout_toLeftOf="@id/email"
        android:layout_alignBaseline="@id/email"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Numer Tel"
        android:layout_toLeftOf="@id/ntel"
        android:layout_alignBaseline="@id/ntel"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Zarejestruj"
        android:layout_below="@id/ntel"
        android:layout_centerHorizontal="true"
        android:background="@color/przycisk"
        />
    <ImageView
        android:layout_marginTop="64dp"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logo"
        android:id="@+id/imageView" />


</RelativeLayout>