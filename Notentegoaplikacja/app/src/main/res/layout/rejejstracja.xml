<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lol"
    android:orientation="vertical">


    <android.support.design.widget.TextInputLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nick"
        android:layout_alignStart="@+id/email"
        android:layout_below="@+id/imageView"
        >

        <android.support.v7.widget.AppCompatEditText

            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/email"
            android:layout_below="@+id/imageView"
            android:layout_marginTop="38dp"
            android:hint="Login"
            android:inputType="text"
            android:maxLines="1" />
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/email"
        android:layout_below="@id/nick"
        android:layout_centerHorizontal="true"
        >
    <android.support.v7.widget.AppCompatEditText

        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:inputType="textEmailAddress" />
    </android.support.design.widget.TextInputLayout>

    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/haslo0"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/email"
        android:layout_centerHorizontal="true"
        android:hint="Hasło"
        android:inputType="textPassword" />

    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/phaslo0"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/haslo0"
        android:layout_centerHorizontal="true"
        android:hint="Powtórzenie Hasła"
        android:inputType="textPassword" />

    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/ntel"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/phaslo0"
        android:layout_centerHorizontal="true"
        android:hint="Numer Telefonu"
        android:inputType="phone" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ntel"
        android:layout_centerHorizontal="true"
        android:background="@color/przycisk"
        android:text="Zarejestruj" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="64dp"
        android:src="@drawable/logo" />


</RelativeLayout>